                    <dotaz dotaz_id="D2">
                        <popis_dotazu>
                                <para> Kteří zákazníci si objednali více než tři různé produkty?  </para>
                        </popis_dotazu>
                            <relacni_algebra>Zamestnanec * { Vydej(id_vydejny=1)[id_zam] \ Vydej(id_vydejny!=1)[id_zam] }</relacni_algebra>
                    </dotaz>
                    <dotaz dotaz_id="D1">
                        <popis_dotazu>
                                <para> Který produkt se prodává nejčastěji a v jaké kategorii se nachází?  </para>
                        </popis_dotazu>
                    </dotaz>
                    <dotaz dotaz_id="D3">
                        <popis_dotazu>
                                <para>Jaký je průměrný počet objednávek na jednoho zákazníka?
</para>
                        </popis_dotazu>
                    </dotaz>
                    <dotaz dotaz_id="D4">
                        <popis_dotazu>
                                <para>Vypsat všechny objednávky, který vytvořil konkretní zákazník.</para>
                        </popis_dotazu>
                    </dotaz>
                    <dotaz dotaz_id="D5">
                        <popis_dotazu>
                                <para>Zobrazit všechny produkty, které patři do vybrané kategorie.</para>
                        </popis_dotazu>
                            <sql>SELECT p.nazev, k.nazev AS kategorie
FROM produkt p
JOIN kategorie k ON p.id_kategorie = k.id
WHERE k.nazev = &apos;Elektronika&apos;;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D6">
                        <popis_dotazu>
                                <para>Spočitat průměrný počet hvězdiček, které má vybrany produkt. </para>
                        </popis_dotazu>
                    </dotaz>
                    <dotaz dotaz_id="D7">
                        <popis_dotazu>
                                <para>Najit nejprodavanější produkty podle celkoveho počtu objednaných kusu. </para>
                        </popis_dotazu>
                    </dotaz>
                    <dotaz dotaz_id="D8">
                        <popis_dotazu>
                                <para>Najít zákazníky, kteří napsali alespoň jedno hodnocení. </para>
                        </popis_dotazu>
                    </dotaz>
                    <dotaz dotaz_id="D9">
                        <popis_dotazu>
                                <para>Zjistit  aktualní celkové množství  konkrétního produktu ve všech skladech. </para>
                        </popis_dotazu>
                    </dotaz>
                    <dotaz dotaz_id="D10">
                        <popis_dotazu>
                                <para>Vypsat všech položky jedné objednávky( produkty, množství, jednotková cena).</para>
                        </popis_dotazu>
                    </dotaz>
                    <dotaz dotaz_id="D11">
                        <popis_dotazu>
                                <para>Seznam jmen všech zákazníků.</para>
                        </popis_dotazu>
                            <relacni_algebra>Zakaznik[jmeno]</relacni_algebra>
                            <sql>SELECT DISTINCT jmeno from Zakaznik;
</sql>
                    </dotaz>
                    <dotaz dotaz_id="D12">
                        <popis_dotazu>
                                <para>Názvy produktů dražšich něž 1000 </para>
                        </popis_dotazu>
                            <relacni_algebra>Produkt(cena &gt; 1000)[nazev]</relacni_algebra>
                            <sql>SELECT DISTINCT nazev FROM Produkt WHERE cena &gt; 1000; </sql>
                    </dotaz>
                    <dotaz dotaz_id="D13">
                        <popis_dotazu>
                                <para>ID všech zákazníků nebo ID všech zaměstnanců</para>
                        </popis_dotazu>
                            <relacni_algebra>Zakaznik[id]∪Zamestnanec[id]</relacni_algebra>
                            <sql>SELECT id FROM Zakaznik UNION SELECT id FROM Zamestnanec;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D15">
                        <popis_dotazu>
                                <para>Datum objednávky a jméno zákazníka.</para>
                        </popis_dotazu>
                            <relacni_algebra>{{objednavka [datum_vytvoreni -&gt; datum_objednavky, id_zakaznik]} * {zakaznik [id -&gt; id_zakaznik, jmeno]}} [datum_objednavky, jmeno]</relacni_algebra>
                            <sql>SELECT DISTINCT o.datum_vytvoreni AS datum_objednavky, z.jmeno FROM objednavka o JOIN zakaznik z ON o.id_zakaznik = z.id;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D16">
                        <popis_dotazu>
                                <para>ID produktů, které ještě nikdo nehodnotil</para>
                        </popis_dotazu>
                            <relacni_algebra>{PRODUKT [id]} \ {HODNOCENI_PRODUKTU [id_produkt -&gt; id]}</relacni_algebra>
                            <sql>SELECT id FROM produkt EXCEPT SELECT id_produkt FROM hodnoceni_produktu;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D17">
                        <popis_dotazu>
                                <para>Jména produktů s cenou vyšší než 20 000.</para>
                        </popis_dotazu>
                            <relacni_algebra>{PRODUKT (cena &gt; 20000) [nazev]}</relacni_algebra>
                            <sql>SELECT DISTINCT nazev FROM produkt WHERE cena &gt; 20000;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D19">
                        <popis_dotazu>
                                <para>Vypiš ID všech produktů, které se nenacházejí v žádném skladu.</para>
                        </popis_dotazu>
                            <sql>SELECT id FROM produkt EXCEPT SELECT id_produkt FROM sklad;
SELECT id FROM produkt WHERE id NOT IN (SELECT id_produkt FROM sklad);
SELECT p.id FROM produkt p WHERE NOT EXISTS (SELECT 1 FROM sklad s WHERE s.id_produkt = p.id);</sql>
                    </dotaz>
                    <dotaz dotaz_id="D20">
                        <popis_dotazu>
                                <para>Vypiš jména všech zákazníků, kteří bydlí v Praze.</para>
                        </popis_dotazu>
                            <relacni_algebra>{zakaznik(adresa=&apos;Praha&apos;)[jmeno]}</relacni_algebra>
                            <sql>SELECT DISTINCT jmeno FROM zakaznik WHERE adresa LIKE &apos;%Praha%&apos;;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D21">
                        <popis_dotazu>
                                <para>Vypiš ID produktů, které si zatím nikdo neobjednal</para>
                        </popis_dotazu>
                            <relacni_algebra>{produkt [id]} \ {polozky_objednavky [id_produkt -&gt; id]}</relacni_algebra>
                            <sql>SELECT id FROM produkt EXCEPT SELECT id_produkt FROM polozky_objednavky;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D22">
                        <popis_dotazu>
                                <para>Vypiš jména a pozice všech zaměstnanců, kteří mají mzdu vyšší než 50 000.</para>
                        </popis_dotazu>
                            <relacni_algebra>{zamestnanec(mzda &gt; 50000)[jmeno, pozice]}</relacni_algebra>
                            <sql>SELECT DISTINCT jmeno, pozice FROM zamestnanec WHERE mzda &gt; 50000;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D23">
                        <popis_dotazu>
                                <para>Všechny možné kombinace zákazníků a skladů.</para>
                        </popis_dotazu>
                            <sql>SELECT z.jmeno, s.lokace FROM Zakaznik z CROSS JOIN Sklad s;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D25">
                        <popis_dotazu>
                                <para>Vypiš jméno a email zákazníka, který má ID rovno 1.</para>
                        </popis_dotazu>
                            <relacni_algebra>{zakaznik(id=1)[jmeno, email]}</relacni_algebra>
                            <sql>SELECT jmeno, email FROM zakaznik WHERE id = 1;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D26">
                        <popis_dotazu>
                                <para>Seznam všech zákazníků, jejich hodnocení a názvy kategorií produktů, které hodnotili (včetně těch, co ještě nehodnotili).</para>
                        </popis_dotazu>
                            <sql>SELECT z.jmeno, h.komentar, kat.nazev_kategorie
FROM zakaznik z
LEFT JOIN hodnoceni_produktu h ON z.id = h.id_zakaznik
LEFT JOIN (SELECT id, nazev AS nazev_kategorie FROM kategorie) AS kat 
ON h.id_produkt IN (SELECT id FROM produkt WHERE id_kategorie = kat.id);</sql>
                    </dotaz>
                    <dotaz dotaz_id="D27">
                        <popis_dotazu>
                                <para>Vypiš jména všech zaměstnanců a ID jejich objednávek (i ty bez nich) a u každého řádku zobraz celkový počet všech produktů v systému.</para>
                        </popis_dotazu>
                            <sql>SELECT z.jmeno, o.id, (SELECT COUNT(*) FROM produkt) AS celkovy_pocet_p
FROM zamestnanec z 
FULL OUTER JOIN objednavka o ON z.id = o.id_zamestnanec;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D29">
                        <popis_dotazu>
                                <para>Zvyš cenu o 10 % u všech produktů, které jsou aktuálně naskladněny v lokaci &apos;Praha&apos;.</para>
                        </popis_dotazu>
                            <sql>UPDATE produkt
SET cena = cena * 1.1
WHERE id IN (SELECT id_produkt FROM sklad WHERE lokace = &apos;Praha&apos;);</sql>
                    </dotaz>
                    <dotaz dotaz_id="D30">
                        <popis_dotazu>
                                <para>Smaž všechna hodnocení produktů, která napsali zákazníci, jejichž ID se již nenachází v hlavní tabulce zákazníků.</para>
                        </popis_dotazu>
                            <sql>DELETE FROM hodnoceni_produktu
WHERE id_zakaznik NOT IN (SELECT id FROM zakaznik);</sql>
                    </dotaz>
                    <dotaz dotaz_id="D31">
                        <popis_dotazu>
                                <para>Vypiš názvy všech dodavatelů a ID produktů, které dodávají.</para>
                        </popis_dotazu>
                            <sql>SELECT d.nazev, dp.id_produkt FROM dodavatel d JOIN dodavatel_produktu dp ON d.id = dp.id_dodavatel;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D32">
                        <popis_dotazu>
                                <para>Seznam jmen zaměstnanců a jejich mezd nad 30 000 Kč, seřazený od nejvyšší.</para>
                        </popis_dotazu>
                            <sql>SELECT jmeno, mzda FROM zamestnanec WHERE mzda &gt; 30000 
GROUP BY jmeno, mzda HAVING COUNT(*) &gt;= 1 ORDER BY mzda DESC;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D33">
                        <popis_dotazu>
                                <para>Vytvoř pohled prehled_dodavatelu, který zobrazuje jména dodavatelů a jejich telefony.</para>
                        </popis_dotazu>
                            <sql>CREATE OR REPLACE VIEW prehled_dodavatelu AS SELECT nazev, telefon FROM dodavatel;
SELECT * FROM prehled_dodavatelu;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D34">
                        <popis_dotazu>
                                <para>Vypiš ID produktů, které jsou zároveň na skladě i v položkách objednávek.</para>
                        </popis_dotazu>
                            <sql>SELECT id_produkt FROM sklad INTERSECT SELECT id_produkt FROM polozky_objednavky;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D35">
                        <popis_dotazu>
                                <para>Vypiš všechny záznamy z přehledu statistik produktů, kde je cena vyšší než nula</para>
                        </popis_dotazu>
                            <sql>SELECT * FROM statistiky_produktu WHERE cena &gt; 0;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D36">
                        <popis_dotazu>
                                <para>Průměrná cena ze tří nejlevnějších produktů.</para>
                        </popis_dotazu>
                            <sql>SELECT AVG(sub.cena) FROM (SELECT cena FROM produkt ORDER BY cena ASC LIMIT 3) AS sub;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D37">
                        <popis_dotazu>
                                <para>Najdi jména dodavatelů, kteří dodávají úplně všechny produkty, které máme v nabídce.</para>
                        </popis_dotazu>
                            <sql>SELECT d.nazev FROM dodavatel d 
JOIN dodavatel_produktu dp ON d.id = dp.id_dodavatel 
GROUP BY d.id, d.nazev 
HAVING COUNT(DISTINCT dp.id_produkt) = (SELECT COUNT(*) FROM produkt);</sql>
                    </dotaz>
                    <dotaz dotaz_id="D38">
                        <popis_dotazu>
                                <para>Vypiš všechny údaje o produktech a jejich zásobách na skladě pomocí přirozeného spojení.</para>
                        </popis_dotazu>
                            <sql>SELECT * FROM produkt NATURAL JOIN sklad;</sql>
                    </dotaz>
                    <dotaz dotaz_id="D39">
                        <popis_dotazu>
                                <para>Vypiš názvy kategorií, které obsahují všechny produkty z tabulky produktů.</para>
                        </popis_dotazu>
                            <sql>SELECT k.nazev
FROM kategorie k
WHERE NOT EXISTS (
    SELECT p.id FROM produkt p
    EXCEPT
    SELECT p2.id FROM produkt p2 WHERE p2.id_kategorie = k.id
);</sql>
                    </dotaz>
                    <dotaz dotaz_id="D41">
                        <popis_dotazu>
                                <para>Vlož nového zákazníka s názvem &apos;VIP Klient&apos;, který bude mít stejnou adresu jako zákazník číslo 1.</para>
                        </popis_dotazu>
                            <sql>INSERT INTO Zakaznik (id, jmeno, email, adresa)
SELECT 99, &apos;VIP Klient&apos;, &apos;vip@firma.cz&apos;, adresa
FROM Zakaznik
WHERE id = 1
ON CONFLICT (id) DO NOTHING;</sql>
                    </dotaz>
